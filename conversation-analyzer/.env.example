# Server Configuration
PORT=6000
NODE_ENV=development

# Case Record API
CASE_RECORD_API_URL=http://localhost:5000/api
CASE_RECORD_API_KEY=your-case-record-api-key

# Sentiment Analysis API
SENTIMENT_API_URL=http://localhost:8000
SENTIMENT_API_KEY=your-sentiment-api-key

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Twilio Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WEBHOOK_URL=https://your-domain.com/webhooks/twilio

# Genesys Cloud Configuration
GENESYS_CLIENT_ID=your-genesys-client-id
GENESYS_CLIENT_SECRET=your-genesys-client-secret
GENESYS_ENVIRONMENT=mypurecloud.com
GENESYS_WEBHOOK_URL=https://your-domain.com/webhooks/genesys

# WebSocket Configuration
WS_PORT=6001
WS_CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/conversation-analyzer.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Processing Configuration
ANALYSIS_BATCH_SIZE=10
ANALYSIS_INTERVAL_MS=5000
MAX_CONVERSATION_DURATION_MS=3600000

# Crisis Detection Thresholds
CRISIS_SENTIMENT_THRESHOLD=-0.7
CRISIS_KEYWORDS_THRESHOLD=3
AUTO_CASE_CREATION_ENABLED=true
